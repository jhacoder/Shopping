<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="2"
    android:rowCount="2"
    tools:context="sushantkumarjha.shopping.Shopping">

        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_height="204dp">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="122dp"
                android:src="@drawable/image_shoes1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:text=" Rs 5000"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/image_star"
                android:layout_height="42dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout2"
            android:layout_width="142dp"
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_height="234dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:src="@drawable/image_shoes2" />

            <TextView
                android:layout_width="match_parent"
                android:text="Shoes"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text=" Rs 5000"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:src="@drawable/image_star" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Layout3"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="249dp"
                android:layout_height="131dp"
                android:src="@drawable/image_shoes3" />

            <TextView
                android:layout_width="match_parent"
                android:text="Shoes"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text=" Rs 5000"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/image_star"
                android:layout_height="43dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout4"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="241dp"
                android:layout_height="131dp"
                android:src="@drawable/image_shoes4" />

            <TextView
                android:layout_width="match_parent"
                android:text="Shoes"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text=" Rs 5000"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/image_star" />


        </LinearLayout>
</GridLayout>
